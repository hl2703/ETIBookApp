@model IEnumerable<EventMicroservice.Models.BookEvent>


<head>
    <meta name="viewport" content="width=device-width" />
    <title>View Events</title>
    <style>
        .container {
            z-index: 0;
            width: 100%;
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .card {
            margin: 30px auto;
            width: 300px;
            height: 300px;
            border-radius: 40px;
            box-shadow: 5px 5px 30px 7px rgba(0,0,0,0.25), -5px -5px 30px 7px rgba(0,0,0,0.22);
            cursor: pointer;
            transition: 0.4s;
        }

            .card .card-img-top {
                width: inherit;
                height: inherit;
                border-radius: 40px;
            }

                .card .card-img-top img {
                    width: inherit;
                    height: inherit;
                    border-radius: 40px;
                    object-fit: cover;
                }

            .card .card-title {
                text-align: center;
                border-radius: 0px 0px 40px 40px;
                font-family: sans-serif;
                font-weight: bold;
                font-size: 30px;
                margin-top: -80px;
                height: 40px;
            }

            .card:hover {
                transform: scale(0.9, 0.9);
                box-shadow: 5px 5px 30px 15px rgba(0,0,0,0.25), -5px -5px 30px 15px rgba(0,0,0,0.22);
            }

        .card-title {
            color: white;
        }
    </style>
</head>
<body>
    @if (Model.ToList().Count > 0)
    {

        <div class="container">
            <div class="split">
                @foreach (var item in Model)
                {
                    <div class="card" style="width:300px; margin-top:5%; margin-left:3%;">

                        <img class="card-img-top" src="https://picsum.photos/400/400" alt="Card image" style="width:100%">
                        <div class="card-body">
                            <a asp-action="Details" asp-controller="Home"
                               asp-route-id="@item.EventID">
                                <h4 class="card-title"> @item.EventName</h4>
                            </a>
                        </div>




                    </div>
                    <br>
                }

            </div>
        </div>

    }

    else
    {
        <span style="color:red">No record found!</span>
    }
</body>
