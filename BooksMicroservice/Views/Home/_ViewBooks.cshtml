@model IEnumerable<BrowseBook.Models.Book>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewBook" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ISBN</th>
                    <th>Title</th>
                    <th>Photo</th>
                    <th>Author</th>
                    <th>Details</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Isbn.ToString()</td>
                        <td>@item.Name</td>
                        <td>
                            @{ string imageFileName = item.Name + ".png"; }
                            <img src="~/images/@imageFileName"
                                 style="width:50px" />
                        </td>
                        <td>@item.Author</td>

                        <td>

                            <a asp-action="Details" asp-controller="Home"
                               asp-route-id="@item.Isbn">Details</a> |

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>

}

